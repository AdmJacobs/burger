<div class="main container">
    <div class="row">
        
        <div class="left col-md-3">
        <div class="top-bun"></div>
            <p>Devour it!</p>
            {{#each burgers}}
                {{#unless this.devoured}}
                    <div class="undevoured">
                        <p>{{this.burger_name}}</p>
                        <form action="/{{this.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="devoured" value="true">
                            <button type="submit">Devour it!</button>
                        </form>
                    </div>
                {{/unless}}
            {{/each}}
            <div class="bottom-bun"></div>
        </div>

        <div class="middle col-md-4 col-md-offset-1">
            <p>Enter a burger you want to eat Click the "Submit" button:</p>
            <div class="burger-added">
                <form action="/" method="POST">
                    <input type="text" name="burger_name"><br>
                    <button type="submit">Submit</button>
                </form>
            </div>
        </div>

        
        <div class="right col-md-3 col-md-offset-1">
        <div class="top-bun"></div>
            <p>Devoured Burgers</p>
            {{#each burgers}}
                {{#if this.devoured}}
                    <div class="devoured">
                        <p>{{this.burger_name}}</p>
                    </div>
                {{/if}}
            {{/each}}
            <form action="/?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
                <button type="submit">Eat It Again!</button>
            </form>
            <div class="bottom-bun"></div>
        </div>
    </div>
</div>